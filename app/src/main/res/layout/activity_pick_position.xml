        <ImageView
            android:id="@+id/soccer_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/soccer_field" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/soccer_field"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/back"
            android:text="Home"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/soccer_field"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/back"
            android:text="Away"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <ImageButton
            android:id="@+id/goalkeeper1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/soccer_field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/goalkeeper2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/soccer_field"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/rightWing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goalkeeper1"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:layout_toStartOf="@+id/centralMidfielder1"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/leftWing2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/goalkeeper2"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:layout_toStartOf="@+id/centralMidfielder2"
            android:background="@drawable/roundedbutton" />


        <ImageButton
            android:id="@+id/leftWing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goalkeeper1"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:layout_toEndOf="@+id/centralMidfielder1"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/rightWing2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/goalkeeper2"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:layout_toEndOf="@+id/centralMidfielder2"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/centralMidfielder1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goalkeeper1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/centralMidfielder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/goalkeeper2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/rightStriker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centralMidfielder1"
            android:layout_alignStart="@+id/rightWing1"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/leftStriker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/centralMidfielder2"
            android:layout_alignStart="@+id/leftWing2"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/leftStriker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centralMidfielder1"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:layout_alignEnd="@+id/leftWing1"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/roundedbutton" />

        <ImageButton
            android:id="@+id/rightStriker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/centralMidfielder2"
            android:layout_alignEnd="@+id/rightWing2"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_baseline_sports_soccer_24"
            android:background="@drawable/roundedbutton" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/surprise_me_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#4CAF50"
                android:text="Surprise Me"
                android:textAllCaps="false"
                android:textSize="25dp" />

        </RelativeLayout>


    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Pick Your Position"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="0dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/game_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:hint="Football"
                            android:textColorHint="@color/black"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/football"
                            android:layout_marginLeft = "0dp"
                            android:maxWidth="1dp"
                            android:layout_width="45dp"
                            android:maxHeight="1dp"
                            android:scaleType="fitCenter"></ImageView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="40dp"
                            android:maxWidth="1dp"
                            android:maxHeight="1dp"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/calendar"></ImageView>

                        <EditText
                            android:id="@+id/game_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:gravity="center"
                            android:hint="6 am, 1st Dec 2022"
                            android:textColorHint="@color/black"
                            android:textStyle="bold" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/position_game_info_outer_layout">

                        <EditText
                            android:id="@+id/position_game_skill_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:hint="Skills: 5"
                            android:textColorHint="@color/black"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_height="39dp"
                            android:src="@drawable/star_symbol_icon"
                            android:layout_marginLeft = "0dp"
                            android:maxWidth="1dp"
                            android:layout_width="25dp"
                            android:maxHeight="1dp"
                            android:scaleType="fitCenter"></ImageView>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="Conduct: 5"
                            android:id="@+id/position_game_conduct_rating"
                            android:textColorHint="@color/black" />

                        <ImageView
                            android:layout_height="39dp"
                            android:src="@drawable/star_symbol_icon"
                            android:layout_marginLeft = "0dp"
                            android:maxWidth="1dp"
                            android:layout_width="25dp"
                            android:maxHeight="1dp"
                            android:scaleType="fitCenter"></ImageView>

                        <ImageView
                            android:src="@drawable/location"
                            android:layout_marginLeft = "40dp"
                            android:layout_height="30dp"
                            android:maxWidth="1dp"
                            android:layout_width="30dp"
                            android:maxHeight="1dp"
                            android:scaleType="fitCenter"
                            android:backgroundTint="#00002229"
                            ></ImageView>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:hint="ARC"
                            android:id="@+id/position_game_location"
                            android:textColorHint="@color/black"/>




                    </LinearLayout>






                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <!--        <TextView-->

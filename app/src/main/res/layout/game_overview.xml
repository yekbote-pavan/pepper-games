                            android:padding="4dp"/>
                    </LinearLayout>
                    <!--user data-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/player_name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pratt"
                            android:textSize="24dp"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skills:"
                                android:textSize="24dp"
                                />
                            <TextView
                                android:id="@+id/player_skills_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="24dp"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/btn_star_big_on" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conduct:"
                                android:textSize="24dp"
                                />
                            <TextView
                                android:id="@+id/player_conduct_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="24dp"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/btn_star_big_on" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <!--individual player box3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/square_border"
                    android:padding="4dp">
                    <!--player profile image-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/player_profile_image_3"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            tools:srcCompat="@tools:sample/avatars"
                            android:adjustViewBounds="true"
                            android:padding="4dp"/>
                    </LinearLayout>
                    <!--user data-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/player_name_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pratt"
                            android:textSize="24dp"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skills:"
                                android:textSize="24dp"
                                />
                            <TextView
                                android:id="@+id/player_skills_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="24dp"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/btn_star_big_on" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conduct:"
                                android:textSize="24dp"
                                />
                            <TextView
                                android:id="@+id/player_conduct_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="24dp"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/btn_star_big_on" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <!--individual player box4-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/square_border"
                    android:padding="4dp">
                    <!--player profile image-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/player_profile_image_4"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            tools:srcCompat="@tools:sample/avatars"
                            android:adjustViewBounds="true"
                            android:padding="4dp"/>
                    </LinearLayout>
                    <!--user data-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/player_name_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pratt"
                            android:textSize="24dp"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skills:"
                                android:textSize="24dp"
                                />
                            <TextView
                                android:id="@+id/player_skills_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="24dp"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/btn_star_big_on" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conduct:"
                                android:textSize="24dp"
                                />
                            <TextView
                                android:id="@+id/player_conduct_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="24dp"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@android:drawable/btn_star_big_on" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!--join and share buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <Button
                android:id="@+id/game_overview_join_button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="JOIN"
                android:textSize="24dp"/>
            <ImageButton
                android:id="@+id/game_overview_share_button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                app:srcCompat="@android:drawable/ic_menu_share" />
        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>